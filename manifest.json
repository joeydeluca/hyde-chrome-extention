{
    "name": "Hyde",
    "version": "0.2",
    "description": "Find people on the internet",
    "manifest_version": 2,
    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png" 
    },
    "permissions": [
        "notifications", "declarativeContent", "storage", "activeTab"
    ],
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["scripts/content.js"],
            "css":["styles/style.css"]
        }
    ],
    "page_action": {
      "default_popup": "html/popup.html"
    }
}